  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function () {
      let filter = this.value.toLowerCase();
      let cards = document.querySelectorAll('.restaurant-card');
      cards.forEach(card => {
        let name = card.getAttribute('data-name').toLowerCase();
        card.style.display = name.includes(filter) ? 'block' : 'none';
      });
    });

    // Modal population
    let restaurantModal = document.getElementById('restaurantModal');
    restaurantModal.addEventListener('show.bs.modal', function (event) {
      let button = event.relatedTarget;
      document.getElementById('modalName').textContent = button.getAttribute('data-name');
      document.getElementById('modalLocation').textContent = button.getAttribute('data-location');
      document.getElementById('modalPhone').textContent = button.getAttribute('data-phone');
      document.getElementById('modalHours').textContent = button.getAttribute('data-hours');
      document.getElementById('modalDesc').textContent = button.getAttribute('data-desc');
    });
  </script>
